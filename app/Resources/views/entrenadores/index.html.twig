{% extends 'base.html.twig' %}

{% block body %}
    <br>
        <div class="container">
            <div id="tablaQuienes" class="background">
              <div id="dentroTabla">
                  <div class="panel-heading" id="tituloEquipo"><h1>LISTA DE  TODOS LOS ENTRENADORES</h1></div><br>
              </div>
            </div>
          </div>
          <br>

    <div class="panel panel-default">
        <p><a id="insertar" href="{{ path('entrenadores_new') }}"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>Insertar un nuevo entrenador</a></p>
        <table class="table">
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Titulaciones</th>
                <th>Apellidos</th>
                <th>Telefono1</th>
                {% if is_granted("ROLE_ADMIN") %}
                <th>Acciones</th>
                {% endif %}
            </tr>
        {% for entrenador in entrenadores %}
            <tr>
                <td><a href="{{ path('entrenadores_show', { 'id': entrenador.id }) }}">{{ entrenador.id }}</a></td>
                <td>{{ entrenador.nombre }}</td>
                <td>{{ entrenador.titulaciones }}</td>
                <td>{{ entrenador.apellidos }}</td>
                <td>{{ entrenador.telefono1 }}</td>
                <td>
                <a href="{{ path('entrenadores_edit', { 'id': entrenador.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                <a href="{{ path('entrenadores_delete', { 'id': entrenador.id }) }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                </td>
            </tr>
        {% endfor %}
        </table>
        </div>
{% endblock %}
