{% extends 'base.html.twig' %}

{% block body %}
    <h1>Noticium</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ noticium.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ noticium.titulo }}</td>
            </tr>
            <tr>
                <th>Subtitulo</th>
                <td>{{ noticium.subtitulo }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ noticium.descripcion }}</td>
            </tr>
            <tr>
                <th>Imagen</th>
                <td>{{ noticium.imagen }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('noticia_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('noticia_edit', { 'id': noticium.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
