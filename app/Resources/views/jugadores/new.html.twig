        {{ form_errors(form.posicion) }}
        {{ form_widget(form.posicion, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="col-xs-3">
        <p>
            {{ form_label(form.equipo, 'Equipo:', {'label_attr': {'class': ''}}) }}
        </p>
        {{ form_errors(form.equipo) }}
        {{ form_widget(form.equipo, {'attr': {'class': 'form-control'}}) }}
    </div>

     <div>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="Create" />
    {{ form_end(form) }}
    </div>
    <a id="insertar" href="{{ path('jugadores_index') }}">Back to the list</a>
</div>
{{ form_end(form) }}
