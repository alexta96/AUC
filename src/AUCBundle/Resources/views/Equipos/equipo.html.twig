        {% extends '::base.html.twig' %}
        {% block body %}
        <br>
        <div id="fh5co-contact" class="fh5co-section-gray">
        <div class="container">
        <div class="col-md-12">
            <div id="tablaQuienes" class="background">
              <div id="dentroTabla">
                  <div class="panel-heading" id="tituloEquipo"><h1>{{ equipo.nombre }}</h1></div><br>
              </div>
            </div>
          </div>
          <br>
          <div class="col-md-offset-2">
              <img id="equipo" src="{{ equipo.imagen }}">
          </div>
        </div>
        <div class="panel panel-default">
        <table class="table">
            {% if is_granted("ROLE_ADMIN") %}
            <p><a id="insertar" href="{{ path('entrenadores_new') }}"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>Insertar un nuevo entrenador</a></p>
            {% endif %}
            <div class="entrenadores">ENTRENADORES </div>
            <tr>
                <th><b>Nombre</b></th>
                <th><b>Apellidos</b></th>
                <th><b>Titulaciones</b></th>
                <th><b>Telefono</b></th>
                {% if is_granted("ROLE_ADMIN") %}
                <th><b>Acciones</b></th>
                {% endif %}
            </tr>
            <tr>
                <td>{{ equipo.entrenador.nombre }}</td>
                <td>{{ equipo.entrenador.apellidos }}</td>
                <td>{{ equipo.entrenador.titulaciones }}</td>
                <td>{{ equipo.entrenador.telefono1 }}</td>
                {% if is_granted("ROLE_ADMIN") %}
                <td>
                <a href="{{ path('entrenadores_edit', { 'id': equipo.entrenador.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                <a href="{{ path('entrenadores_delete', { 'id': equipo.entrenador.id }) }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                </td>
                {% endif %}
            </tr>
        </table>
        </div>
          <br>
        <div class="panel panel-default">
        <table class="table">
            {% if is_granted("ROLE_ADMIN") %}
            <p><a id="insertar" href="{{ path('jugadores_new') }}"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>Insertar un nuevo jugador</a></p>
            {% endif %}
            <div class="entrenadores">JUGADORES </div>
            <tr>
                <th><b>Nombre</b></th>
                <th><b>Apellidos</b></th>
                <th><b>Posici√≥n</b></th>
                {% if is_granted("ROLE_ADMIN") %}
                <th><b>Acciones</b></th>
                {% endif %}
            </tr>
        {% for jugador in equipo.jugador %}
            <tr>
                <td>{{ jugador.nombre }}</td>
                <td>{{ jugador.apellidos }}</td>
                <td>{{ jugador.posicion }}</td>
                {% if is_granted("ROLE_ADMIN") %}
                <td>
                <a href="{{ path('jugadores_edit', { 'id': jugador.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                <a href="{{ path('jugadores_delete', { 'id': jugador.id }) }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                </td>
                {% endif %}
            </tr>
            {% endfor %}
        </table>
        </div>
        </div>
        {% endblock %}