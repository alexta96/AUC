{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <h1>Crear Jugador</h1>
    <div class="col-xs-3">
        <p>
            {{ form_label(form.nombre, 'Nombre:', {'label_attr': {'class': ''}}) }}
        </p>
        {{ form_errors(form.nombre) }}
        {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="col-xs-3">
        <p>
            {{ form_label(form.apellidos, 'Apellidos:', {'label_attr': {'class': ''}}) }}
        </p>
        {{ form_errors(form.apellidos) }}
        {{ form_widget(form.apellidos, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="col-xs-3">
        <p>
            {{ form_label(form.posicion, 'Posicion:', {'label_attr': {'class': ''}}) }}
