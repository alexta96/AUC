{% extends 'base.html.twig' %}

{% block body %}
    <br>
        <div class="container">
            <div id="tablaQuienes" class="background">
              <div id="dentroTabla">
                  <div class="panel-heading" id="tituloEquipo"><h1>LISTA DE  TODOS LOS JUGADORES</h1></div><br>
              </div>
            </div>
          </div>
          <br>
    <div class="panel panel-default">
        <p><a id="insertar" href="{{ path('jugadores_new') }}"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>Insertar un nuevo jugador</a></p>
        <table class="table">
            <tr>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Posicion</th>
                {% if is_granted("ROLE_ADMIN") %}
                <th>Acciones</th>
                {% endif %}
            </tr>
        {% for jugador in jugadores %}
            <tr>
                <td>{{ jugador.nombre }}</td>
                <td>{{ jugador.apellidos }}</td>
                <td>{{ jugador.posicion }}</td>
                <td>
                <a href="{{ path('jugadores_edit', { 'id': jugador.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                <a href="{{ path('jugadores_delete', { 'id': jugador.id }) }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                </td>
            </tr>
        {% endfor %}
        </table>
        </div>
{% endblock %}
